<%= render '/layouts/navbar' %>

<section>
  <%= form_for :book, url:"/books/#{params[:id]}", :action=>"upload", :multipart=>true  do |f| %>
    <%= f.label(:l_title, "Title:") %>
    <%= f.text_field(:title, class: 'form-control') %>
    <%= f.label(:l_genre, "Genre:") %>
    <%= f.text_field(:genre, class: 'form-control') %>
    <%= f.label(:l_summary, "Summary:") %>
    <%= f.text_area(:summary, rows: '5', class: 'form-control') %>
    <%= f.label(:l_image, "Upload new cover:") %>
    <%= f.file_field(:image, class:'form-control') %>
    <%= f.submit "Edit", class: "btn btn-primary" %>
  <% end %>
</section>
