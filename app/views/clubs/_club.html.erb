<div class="news-item book_club">
<% if sample then %>
  <h3><%=  link_to club.name, "/clubs/#{club.id}" %></h3>
  <p><%= excerpt(club.description, '', radius: 200) %></p>
<% else %>
  <h3><%= club.name %></h3>
  <p><%= club.description %></p>

  <% if current_user.club_owner?(club) %>
      <p> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Edit", "/clubs/edit/#{params[:id]}" %> </p>
  <% end %>

<% end %>
</div>


