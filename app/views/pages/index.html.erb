<div class="login_container">
  <h1>Libra</h1>
  <%= form_tag do %>
    <%= label_tag(:l_email, "Email ") %>
    <%= text_field_tag(:email, nil, class: 'form-control') %>
    <%= label_tag(:l_password, "Password ") %>
    <%= text_field_tag(:password, nil, :class => 'form-control') %>
  <% end %>
  <%= link_to "Sign up", "/users/new" %>
</div>

